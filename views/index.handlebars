<div class="jumbotron-fluid bg">

  <div class="row">
    <div class="col-lg-12">
      <div class="jumbotron ">
        <h1 class="text-center title"> Nellie Bly's Ultimate BucketList!</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="jumbotron" id="complete">
        <!-- Current Meals-->
         <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">
            <strong>BucketList Items that are Not complete!</strong>
          </h3>
        </div>
            <ol>
              {{#each bucketItem}}
                {{#unless complete}}
                  {{> bucketlist-block complete=true}}
                  {{!-- This carrot means partials are in use --}}
                {{/unless}}
              {{/each}}
            </ol>
           </div>
        </div> 
      </div>
    

    <div class="col-md-6">
      <div class="jumbotron" id="not-complete">
        <!-- Current Meals-->
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">
              <strong>BucketList Items that are complete!</strong>
            </h3>
          </div>
            <ol>
              {{#each bucketItem}}
                {{#if complete}}
                  {{> bucketlist-block complete=false}}
                {{/if}}
              {{/each}}
            </ol>
        </div>
      </div>
    </div>
  </div>
</div>

    <div class="row">
    <div class="col-lg-12">
      <div class="jumbotron">
        <h2>Add a BucketList Item</h2>
        <form class="form-group create-form">

          <div class="form-group">
            <label for="item">BucketList Item Name:</label>
            <input type="text" class="form-control" id="item" name="name">
          </div>

          <div class="form-group">
            <label for="complete">Complete?</label><br>
            <input type="radio" name="complete" value="1" checked> Complete<br>
            <input type="radio" name="complete" value="0"> TODO
          </div>

          <button type="submit">Add Item!</button>
        </form>
      </div>
    </div>
  </div>

</div>